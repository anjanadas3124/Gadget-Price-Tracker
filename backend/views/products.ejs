<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            color: #333;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #111;
            padding: 15px 20px;
            color: white;
        }
        .navbar .logo {
            font-size: 24px;
            font-weight: bold;
        }
        .navbar nav a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            font-size: 18px;
        }
        .sign-in {
            background-color: #f1c40f;
            padding: 10px 20px;
            border-radius: 5px;
            color: black;
            font-weight: bold;
            text-decoration: none;
        }

        .product-section {
            text-align: center;
            padding: 30px;
        }

        .product-list {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
        }

        .product-card {
            background-color: white;
            padding: 15px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            flex: 1 1 250px;
            max-width: 300px;
        }

        .product-card img {
            width: 100%;
            max-height: 200px;
            object-fit: cover;
            border-radius: 5px;
        }

        .product-card h3 {
            font-size: 18px;
            margin-top: 10px;
        }

        .discount {
            text-decoration: line-through;
            color: red;
            font-size: 14px;
        }

        .add-to-cart {
            background-color: #f1c40f;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
            margin-top: 10px;
            transition: all 0.3s ease;
        }

        .add-to-cart:hover {
            background-color: #e6b800;
            transform: translateY(-2px);
        }

        .add-to-cart:active {
            transform: translateY(0);
        }

        .cart-count {
            background-color: #f1c40f;
            color: black;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 12px;
            margin-left: 5px;
        }

        footer {
            text-align: center;
            padding: 15px;
            background-color: #111;
            color: white;
            margin-top: 30px;
        }

        /* Added subtle animation for cart feedback */
        @keyframes cartBump {
            0% { transform: scale(1); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }

        .cart-bump {
            animation: cartBump 0.3s ease;
        }
    </style>
</head>
<body>
    <header>
        <div class="navbar">
            <h1 class="logo">GADGET</h1>
            <nav>
                <a href="/">Home</a>
                <a href="/cart">Cart <span id="cartCount" class="cart-count">0</span></a>
                <a href="/results">Deals</a>
                <a href="#">Contact Us</a>
            </nav>
            <a href="/login" class="sign-in">Sign In</a>
        </div>
    </header>

    <main>
        <section class="product-section">
            <h2>Laptops</h2>
            <div class="product-list">
                <% let laptops = [
                    { id: 1, name: 'Dell XPS 13', price: 999, originalPrice: 1199, image: 'https://i.pinimg.com/736x/39/2a/c4/392ac4f4ccc8d69573fcd692ecde61a5.jpg' },
                    { id: 2, name: 'MacBook Air', price: 1099, originalPrice: 1299, image: 'https://i.pinimg.com/736x/2b/7f/89/2b7f899a42a031494ac9423c4109a047.jpg' },
                    { id: 3, name: 'HP Spectre x360', price: 1249, originalPrice: 1499, image: 'https://i.pinimg.com/736x/1a/15/0a/1a150abf803653102201892ee1adea61.jpg' },
                    { id: 4, name: 'Lenovo ThinkPad X1', price: 1399, originalPrice: 1599, image: 'https://i.pinimg.com/736x/4f/fc/f7/4ffcf7655138de70bb1d8364803c6468.jpg' }
                ]; %>

                <% laptops.forEach(laptop => { %>
                    <div class="product-card">
                        <img src="<%= laptop.image %>" alt="<%= laptop.name %>">
                        <h3><%= laptop.name %></h3>
                        <p>$<%= laptop.price %> <span class="discount">$<%= laptop.originalPrice %></span></p>
                        <button class="add-to-cart" data-id="<%= laptop.id %>" data-name="<%= laptop.name %>" data-price="<%= laptop.price %>" data-image="<%= laptop.image %>">Add to Cart</button>
                    </div>
                <% }); %>
            </div>
        </section>

        <section class="product-section">
            <h2>Mobiles</h2>
            <div class="product-list">
                <% let mobiles = [
                    { id: 5, name: 'iPhone 14 Pro', price: 1099, originalPrice: 1299, image: 'https://iplanet.one/cdn/shop/files/iPhone_14_Pro_Gold_PDP_Image_Position-1a__WWEN.jpg?v=1691141053&width=1445' },
                    { id: 6, name: 'Samsung Galaxy S23', price: 999, originalPrice: 1199, image: 'https://images.samsung.com/is/image/samsung/p6pim/levant/2302/gallery/levant-galaxy-s23-s911-sm-s911blicmea-534843692?$684_547_PNG$' },
                    { id: 7, name: 'OnePlus 11', price: 749, originalPrice: 899, image: 'https://www.xparts.in/wp-content/uploads/2024/05/OnePlus-11-5G-Back-Housing.png' },
                    { id: 8, name: 'Google Pixel 7 Pro', price: 899, originalPrice: 1099, image: 'https://rukminim3.flixcart.com/image/850/1000/xif0q/mobile/t/u/m/-original-imaggsuehy3nyj3b.jpeg?q=90&crop=false' }
                ]; %>

                <% mobiles.forEach(mobile => { %>
                    <div class="product-card">
                        <img src="<%= mobile.image %>" alt="<%= mobile.name %>">
                        <h3><%= mobile.name %></h3>
                        <p>$<%= mobile.price %> <span class="discount">$<%= mobile.originalPrice %></span></p>
                        <button class="add-to-cart" data-id="<%= mobile.id %>" data-name="<%= mobile.name %>" data-price="<%= mobile.price %>" data-image="<%= mobile.image %>">Add to Cart</button>
                    </div>
                <% }); %>
            </div>
        </section>

        <section class="product-section">
            <h2>Earbuds</h2>
            <div class="product-list">
                <% let earbuds = [
                    { id: 9, name: 'Apple AirPods Pro', price: 249, originalPrice: 299, image: 'https://i.pinimg.com/736x/1c/27/b9/1c27b93a3d266294994944c471beb07a.jpg' },
                    { id: 10, name: 'Samsung Galaxy Buds2', price: 149, originalPrice: 199, image: 'https://i.pinimg.com/736x/77/c7/8d/77c78df4d4c4e03dd4e6b11d7335bb55.jpg' },
                    { id: 11, name: 'Sony WF-1000XM4', price: 279, originalPrice: 329, image: 'https://i.pinimg.com/736x/ce/d6/5d/ced65d7f649165eead652544935e87e9.jpg' },
                    { id: 12, name: 'boAt Airdopes 311 Pro', price: 199, originalPrice: 249, image: 'https://i.pinimg.com/736x/78/d4/f4/78d4f4b1baa23819e0fc8dcdda1ed3ee.jpg' }
                ]; %>

                <% earbuds.forEach(earbud => { %>
                    <div class="product-card">
                        <img src="<%= earbud.image %>" alt="<%= earbud.name %>">
                        <h3><%= earbud.name %></h3>
                        <p>$<%= earbud.price %> <span class="discount">$<%= earbud.originalPrice %></span></p>
                        <button class="add-to-cart" data-id="<%= earbud.id %>" data-name="<%= earbud.name %>" data-price="<%= earbud.price %>" data-image="<%= earbud.image %>">Add to Cart</button>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>

    <footer>
        <p>&copy; 2025 Gadget Tracker. All rights reserved.</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize cart from localStorage or empty array
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            
            // Update cart count display
            function updateCartCount() {
                const totalItems = cart.reduce((total, item) => total + (item.quantity || 1), 0);
                const cartCountElement = document.getElementById('cartCount');
                cartCountElement.textContent = totalItems;
                
                // Add visual feedback
                cartCountElement.classList.add('cart-bump');
                setTimeout(() => {
                    cartCountElement.classList.remove('cart-bump');
                }, 300);
            }
            
            // Add to cart functionality
            document.querySelectorAll('.add-to-cart').forEach(button => {
                button.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const name = this.getAttribute('data-name');
                    const price = parseFloat(this.getAttribute('data-price'));
                    const image = this.getAttribute('data-image');
                    
                    // Check if item already exists in cart
                    const existingItem = cart.find(item => item.id === id);
                    
                    if (existingItem) {
                        existingItem.quantity = (existingItem.quantity || 1) + 1;
                    } else {
                        cart.push({
                            id,
                            name,
                            price,
                            image,
                            quantity: 1
                        });
                    }
                    
                    // Save to localStorage and update UI
                    localStorage.setItem('cart', JSON.stringify(cart));
                    updateCartCount();
                    
                    // Provide visual feedback on the button
                    this.textContent = 'Added!';
                    this.style.backgroundColor = '#4CAF50';
                    setTimeout(() => {
                        this.textContent = 'Add to Cart';
                        this.style.backgroundColor = '#f1c40f';
                    }, 1000);
                });
            });
            
            // Initialize cart count on page load
            updateCartCount();
        });
    </script>
</body>
</html>